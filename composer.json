{
    "name": "sari-sari/pos",
    "description": "Point of Sale system for Sari-Sari stores",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "illuminate/database": "^8.0|^9.0|^10.0",
        "illuminate/events": "^8.0|^9.0|^10.0",
        "symfony/console": "^5.0|^6.0",
        "nikic/fast-route": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}